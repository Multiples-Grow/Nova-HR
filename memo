        </div>
    </footer>

    <!-- Scripts -->
    <script>
        // State
        const state = {
            totalUsers: 400000,
            legacyPriceAnnual: 1.30, 
            saasPriceAnnual: 37.44 
        };

        let charts = {};

        // Navigation Controllers
        function scrollToSection(id) {
            const el = document.getElementById(id);
            if (el) {
                const navHeight = 64; // Navbar height
                const offset = el.offsetTop - navHeight;
                window.scrollTo({
                    top: offset,
                    behavior: 'smooth'
                });
            }
        }

        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        // Global function for the top menu buttons
        function navigateToSection(id) {
            scrollToSection(id);
        }

        window.addEventListener('DOMContentLoaded', () => {
            initArbitrageChart();
            initDensityChart();
            initRevenueChart();
            initAllocationChart();
            
            const slider = document.getElementById('migrationSlider');
            if (slider) {
                slider.addEventListener('input', updateArbitrage);
                updateArbitrage();
            }

            // Sync navigation button clicks (just in case browser handles <a> tags poorly)
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', (e) => {
                    e.preventDefault();
                    const targetId = link.getAttribute('href').replace('#', '');
                    navigateToSection(targetId);
                });
            });

            // Enhanced Scroll-Spy logic
            const sections = document.querySelectorAll('section[id]');
            const navLinks = document.querySelectorAll('.nav-link');

            window.addEventListener('scroll', throttle(() => {
                let current = 'hero';
                const scrollPos = window.scrollY + 100; // threshold

                sections.forEach(section => {
                    if (scrollPos >= section.offsetTop) {
                        current = section.getAttribute('id');
                    }
                });

                navLinks.forEach(link => {
                    link.classList.remove('active');
                    if (link.getAttribute('href') === '#' + current) {
                        link.classList.add('active');
                    }
                });
            }, 50));
        });

        function throttle(fn, wait) {
            let time = Date.now();
            return function() {
                if ((time + wait - Date.now()) < 0) {
                    fn();
                    time = Date.now();
                }
            }
        }

        // Calculation Logic
        function updateArbitrage() {
            const slider = document.getElementById('migrationSlider');
            const sliderValue = document.getElementById('sliderValue');
            const saasDisplay = document.getElementById('saasRevenueDisplay');
            
            if (!slider || !sliderValue || !saasDisplay) return;

            const percentage = slider.value;
            sliderValue.textContent = percentage + '% Target';
            const saasRevenue = (state.totalUsers * (percentage / 100)) * state.saasPriceAnnual;
            saasDisplay.textContent = '$' + (saasRevenue / 1000000).toFixed(2) + 'M';
            
            if (charts.arb) {
                charts.arb.data.datasets[0].data[1] = (saasRevenue / 1000000);
                charts.arb.update('none'); 
            }
        }

        // Chart Initialization
        function initArbitrageChart() {
            const el = document.getElementById('arbitrageChart');
            if (!el) return;
            charts.arb = new Chart(el.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: ['Legacy Revenue', 'SaaS Migration'],
                    datasets: [{
                        data: [0.65, 10.48], 
                        backgroundColor: ['#94a3b8', '#15803d'],
                        borderRadius: 6,
                        barThickness: 50
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: { beginAtZero: true, title: { display: true, text: 'USD Millions', font: { size: 10 } } }
                    }
                }
            });
        }

        function initDensityChart() {
            const el = document.getElementById('densityChart');
            if (!el) return;
            new Chart(el.getContext('2d'), {
                type: 'bubble',
                data: {
                    datasets: [
                        { label: 'NovaHR', data: [{x: 500, y: 400000, r: 25}], backgroundColor: '#d97706', borderColor: '#b45309', borderWidth: 2 },
                        { label: 'MenaiTech', data: [{x: 2000, y: 2000000, r: 20}], backgroundColor: '#94a3b8' },
                        { label: 'Jisr', data: [{x: 4500, y: 1000000, r: 12}], backgroundColor: '#cbd5e1' },
                        { label: 'ZenHR', data: [{x: 1000, y: 100000, r: 8}], backgroundColor: '#e2e8f0' }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom', labels: { boxWidth: 10, font: { size: 10 } } },
                        tooltip: {
                            callbacks: { label: (c) => c.dataset.label + ': ~' + Math.round(c.raw.y / c.raw.x) + ' Users/Client' }
                        }
                    },
                    scales: {
                        x: { type: 'logarithmic', title: { display: true, text: 'Number of Clients', font: { size: 10 } } },
                        y: { type: 'logarithmic', title: { display: true, text: 'Total Users', font: { size: 10 } } }
                    }
                }
            });
        }

        function initRevenueChart() {
            const el = document.getElementById('revenueChart');
            if (!el) return;
            new Chart(el.getContext('2d'), {
                type: 'line',
                data: {
                    labels: ['2025 (L)', '2026', '2027', '2028', '2029', '2030 (S)'],
                    datasets: [{
                        data: [0.655, 4.2, 11, 22.5, 38.0, 52.0], 
                        borderColor: '#1e3a8a',
                        backgroundColor: 'rgba(30, 58, 138, 0.15)',
                        fill: true,
                        tension: 0.3,
                        pointBackgroundColor: '#d97706'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: { y: { beginAtZero: true } }
                }
            });
        }

        function initAllocationChart() {
            const el = document.getElementById('allocationChart');
            if (!el) return;
            new Chart(el.getContext('2d'), {
                type: 'doughnut',
                data: {
                    labels: ['Team', 'Operations', 'Marketing', 'Product'],
                    datasets: [{
                        data: [30, 25, 25, 20],
                        backgroundColor: ['#1e3a8a', '#d97706', '#166534', '#94a3b8'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    cutout: '70%',
                    plugins: { legend: { display: false } }
                }
            });
        }
    </script>
</body>
</html>


