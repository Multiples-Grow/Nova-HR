        function loadTemplate(key) {
            document.querySelectorAll('.template-btn').forEach(btn => btn.classList.remove('active'));
            document.getElementById('btn-' + key).classList.add('active');

            const tpl = templates[key];
            document.getElementById('template-title').innerText = tpl.title;
            document.getElementById('template-desc').innerText = tpl.desc;
            document.getElementById('template-content').value = tpl.content;
        }

        function copyToClipboard() {
            const content = document.getElementById("template-content");
            
            // Replaced navigator.clipboard with execCommand('copy') for robust iframe support
            content.select();
            try {
                const successful = document.execCommand('copy');
                if (successful) {
                    showToast();
                }
            } catch (err) {
                console.error('Copy failed', err);
            }
        }

        function showToast() {
            const toast = document.getElementById('toast');
            toast.classList.remove('translate-y-20', 'opacity-0');
            setTimeout(() => { toast.classList.add('translate-y-20', 'opacity-0'); }, 2000);
        }

        function scrollToSection(id) {
            document.getElementById(id).scrollIntoView();
            document.querySelectorAll('.nav-item').forEach(btn => btn.classList.remove('active'));
            const activeBtn = Array.from(document.querySelectorAll('.nav-item')).find(btn => btn.getAttribute('onclick').includes(id));
            if(activeBtn) activeBtn.classList.add('active');
        }

        // Initialize Momentum Chart
        function initMomentumChart() {
            const ctx = document.getElementById('momentumChart').getContext('2d');
            
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['M1: Setup', 'M2: KSA Pilot', 'M3: ERP Beta', 'M4: KSA Entity', 'M5: Soft Commits', 'M6: Round Close'],
                    datasets: [
                        {
                            label: 'Lines (Cumulative Trust)',
                            type: 'line',
                            data: [15, 35, 55, 75, 90, 110],
                            borderColor: '#4F46E5',
                            backgroundColor: 'rgba(79, 70, 229, 0.05)',
                            fill: true,
                            tension: 0.4,
                            borderWidth: 5,
                            pointRadius: 6,
                            pointBackgroundColor: '#fff',
                            pointBorderWidth: 3,
                            zIndex: 2
                        },
                        {
                            label: 'Dots (Isolated Signal)',
                            data: [20, 10, 15, 5, 20, 10],
                            backgroundColor: '#CBD5E1',
                            borderRadius: 4,
                            barThickness: 12,
                            zIndex: 1
                        }
                    ]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: '#1E293B',
                            titleFont: { size: 12, weight: 'bold' },
                            padding: 12,
                            callbacks: {
                                label: function(context) {
                                    return context.datasetIndex === 0 ? "Compounded Conviction: " + context.raw + "%" : "Isolated Event Impact: " + context.raw + "%";
                                }
                            }
                        }
                    },
                    scales: {
                        y: { beginAtZero: true, display: false, max: 130 },
                        x: { grid: { display: false }, ticks: { color: '#94A3B8', font: { size: 10, weight: 'bold' } } }
                    }
                },
                plugins: [{
                    beforeDraw: (chart) => {
                        const ctx = chart.ctx;
                        const yAxis = chart.scales.y;
                        const thresholdY = yAxis.getPixelForValue(100);
                        ctx.save();
                        ctx.beginPath();
                        ctx.setLineDash([5, 5]);
                        ctx.moveTo(chart.chartArea.left, thresholdY);
                        ctx.lineTo(chart.chartArea.right, thresholdY);
                        ctx.strokeStyle = '#10B981';
                        ctx.lineWidth = 2;
                        ctx.stroke();
                        ctx.fillStyle = '#10B981';
                        ctx.font = 'bold 10px Inter';
                        ctx.fillText('INVESTMENT THRESHOLD', chart.chartArea.left + 10, thresholdY - 10);
                        ctx.restore();
                    }
                }]
            });
        }

        window.onload = function() {
            initMomentumChart();
            loadTemplate('teaserA');
        };

    </script>
</body>
</html>


